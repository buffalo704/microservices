# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t orders-api`.
FROM node:18-alpine

ENV HOST=0.0.0.0
ENV PORT=4001

WORKDIR /app

RUN addgroup --system comments && \
          adduser --system -G comments comments

COPY dist/apps/comments comments
RUN chown -R comments:comments .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix comments --omit=dev -f install

CMD [ "npm", "start", "comments" ]
