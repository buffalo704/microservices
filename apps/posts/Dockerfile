# Build the docker image with `npx nx docker-build orders-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t orders-api`.
FROM node:18-alpine

ENV HOST=0.0.0.0
ENV PORT=4000

WORKDIR /app

RUN addgroup --system posts && \
          adduser --system -G posts posts

COPY dist/apps/posts posts
RUN chown -R posts:posts .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix posts --omit=dev -f install

CMD [ "npm", "start", "posts" ]
